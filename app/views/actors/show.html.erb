<%= render 'partials/header_index' %>

<div class="main actor-show">
  <div class="container">
    
    <!-- Display an actor's info here -->
    <div class="row">
      <div class="col-lg-1"></div>
      <div class="col-lg-4 border"> 
        <div class="single_actor_page">
          <%= image_tag @actor.image %>
          <div class="actor_info">
            <h3 class="actor-name"><%= @actor.first_name + " " + @actor.last_name  %></h3>
            <p class="actor-bio"><%= @actor.bio %></p>
          </div>
        </div>
      </div>
      <div class="col-lg-1"></div>
      <div class="col-lg-6">
        <div class="actors_header">
          <%= @actor.first_name + ' ' + @actor.last_name + ' Movies' %>
        </div>
        <hr>
        <% @movies.each do |movie| %>
        <div class="movie">
          <%= image_tag movie.image %>
          <h3 class="movie-title"><%= movie.title %></h3>
          <p class="movie-release-year"><%= movie.release_year %></p>
          <p class="movie-plot"><%= movie.plot %></p>
        </div>
        <% end %>
      </div>
    </div>

  </div>
</div>
