<%= render 'partials/header_index' %>

<div class="main actor-index">
  <div class="actors_header">
    Actors
  </div>
    <hr>
      <div class="container">
        <div class="row">
          <% @actors.order("last_name").each do |actor| %>
          <div class="actor col-xs-3">
            <%= image_tag actor.image %>
            <h3><%= actor.first_name + " " + actor.last_name %></h3>
            <%= link_to "Learn more", actor_path(actor) %>
          </div>
          <% end %>
        </div>
      </div>
</div>